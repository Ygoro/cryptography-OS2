<KeyCreationScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 30
        padding: 50
        Label:
            text: 'Stvaranje ključeva'
            font_size: 30
        Button:
            text: 'Tajni ključ'
            font_size: 20
            on_press:
                root.createSecretKey()
        Button:
            text: 'Javni ključ'
            font_size: 20
            on_press:
                root.createPublicKey()
        Button:
            text: 'Privatni ključ'
            font_size: 20
            on_press:
                root.createPrivateKey()
        Label:
            text: ' '
            font_size: 30
        Button:
            text: ' --> '
            font_size: 30
            on_press:
                root.manager.current = 'tekst'

<InputEncryptionScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 30
        padding: 50
        Label:
            text: 'Tekst za kriptiranje'
            font_size: 30
        TextInput:
            id: my_textinput
            allow_copy: True
            cursor_blink: True
            focus: True
            hint_text: 'Ovdje unesite tekst...'
            text_language: 'hr'
            write_tab: False
            font_size: 18
        Button:
            text: 'Upiši u datoteku'
            font_size: 20
            on_press:
                root.encryptTextInput()
        Label:
            text: ' '
            font_size: 30
        BoxLayout:
            orientation: 'horizontal'
            spacing: 30
            Button:
                text: ' <-- '
                font_size: 30
                on_press:
                    root.manager.current = 'kljucevi'
            Button:
                text: ' --> '
                font_size: 30
                on_press:
                    root.manager.current = 'kriptiranje'

